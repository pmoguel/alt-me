---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Proyectos | Fanático Perr1">
  <div class="max-w-7xl mx-auto px-6 py-12">
    <h1 class="text-4xl font-bold mb-8">Proyectos</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- Photo Box -->
      <a href="/photos" class="group relative overflow-hidden rounded-lg shadow-lg transition-transform hover:scale-105">
        <div class="aspect-w-16 aspect-h-9">
          <img
            src="/images/photo-preview.jpg"
            alt="Distinas Realidades"
            class="w-full h-full object-cover"
          />
        </div>
        <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent flex items-end p-6">
          <div class="text-white">
            <h2 class="text-2xl font-bold mb-2">Distinas Realidades</h2>
            <p class="text-sm opacity-90">Proyecto de Fotografía - Primer Semestre</p>
          </div>
        </div>
      </a>
      
      <!-- Aquí irán tus otros proyectos -->
    </div>
  </div>
</Layout>

<style>
  .aspect-w-16 {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
  }
  
  .aspect-w-16 img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
</style> 